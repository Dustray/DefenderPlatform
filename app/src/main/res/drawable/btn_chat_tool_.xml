<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="100">

    <item android:state_pressed="false">
        <shape android:useLevel="false">
            <gradient android:endColor="#2AAAFF" android:startColor="#1E90FF" android:type="linear" />
            <corners android:bottomLeftRadius="100dip" android:bottomRightRadius="100dip" android:topLeftRadius="100dip" android:topRightRadius="100dip" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:useLevel="false">
            <gradient android:endColor="#1A9AFF" android:startColor="#0E80EF" android:type="linear" />
            <corners android:bottomLeftRadius="100dip" android:bottomRightRadius="100dip" android:topLeftRadius="100dip" android:topRightRadius="100dip" />
        </shape>
    </item>
</selector>