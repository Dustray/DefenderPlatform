<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="100">

    <item android:state_pressed="false">
        <shape android:useLevel="false">
            <gradient android:centerColor="#0000" android:endColor="#0000" android:gradientRadius="100" android:startColor="#0000" android:type="radial" />
            <corners android:bottomLeftRadius="100dip" android:bottomRightRadius="100dip" android:topLeftRadius="100dip" android:topRightRadius="100dip" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:useLevel="false">

            <gradient android:endColor="#0000" android:gradientRadius="100" android:startColor="#4666" android:type="radial" />
            <corners android:bottomLeftRadius="100dip" android:bottomRightRadius="100dip" android:topLeftRadius="100dip" android:topRightRadius="100dip" />
        </shape>
    </item>
</selector>