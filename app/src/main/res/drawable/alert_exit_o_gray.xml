<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="150" android:exitFadeDuration="150">

    <item android:state_pressed="false">
        <shape android:useLevel="false">
            <gradient android:angle="90" android:centerColor="#e9e9e9" android:endColor="#f0f0f0" android:startColor="#ddd" android:type="linear" />
            <corners android:bottomLeftRadius="15dip" android:bottomRightRadius="15dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:useLevel="false">
            <gradient android:endColor="#f0f0f0" android:startColor="#ebebeb" android:type="linear" />

            <corners android:bottomLeftRadius="15dip" android:bottomRightRadius="15dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
        </shape>
    </item>
</selector>