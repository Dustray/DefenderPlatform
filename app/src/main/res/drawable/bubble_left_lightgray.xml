<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="false">
        <shape android:useLevel="false">
            <gradient android:endColor="#fff" android:startColor="#fdfdfd" android:type="linear" />
            <!--<padding android:bottom="10dip" android:left="10dip" android:right="10dip" android:top="10dip" />-->
            <corners android:bottomLeftRadius="10dip" android:bottomRightRadius="10dip" android:topLeftRadius="0dip" android:topRightRadius="10dip" />
        <stroke android:width="1dp" android:color="#eee" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:useLevel="false">
            <gradient android:endColor="#f1f1f1" android:startColor="#eee" android:type="linear" />
            <!--<padding android:bottom="10dip" android:left="10dip" android:right="10dip" android:top="10dip" />-->
            <corners android:bottomLeftRadius="10dip" android:bottomRightRadius="10dip" android:topLeftRadius="0dip" android:topRightRadius="10dip" />
        </shape>
    </item>
</selector>