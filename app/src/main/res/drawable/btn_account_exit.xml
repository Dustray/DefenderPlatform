<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:useLevel="false">
            <gradient android:endColor="#ee0000" android:startColor="#dd0000" android:type="linear" />
            <corners android:bottomLeftRadius="4dip" android:bottomRightRadius="4dip" android:topLeftRadius="4dip" android:topRightRadius="4dip" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:useLevel="false">
            <gradient android:endColor="#cc0000" android:startColor="#bb0000" android:type="linear" />
            <corners android:bottomLeftRadius="4dip" android:bottomRightRadius="4dip" android:topLeftRadius="4dip" android:topRightRadius="4dip" />
        </shape>
    </item>
</selector>