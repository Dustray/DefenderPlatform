<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="cn.dustray.defenderplatform.ChatToolFragment"
    android:layout_width="match_parent"
    android:layout_height="390dp"
    tools:context=".ChatToolFragment"
    android:background="#eee">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_columnWeight="1"
        android:background="@color/colorPrimary"
        android:elevation="1dp">

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/web_group_list"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_centerVertical="true" />


    <ImageButton
        android:id="@+id/btn_web_closeall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_web_menu_add"
        android:elevation="3dp"
        android:src="@drawable/ic_btn_close_black" />

    <ImageButton
        android:id="@+id/btn_web_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_web_menu_add"
        android:elevation="3dp"
        android:src="@drawable/ic_btn_add_black" />


</RelativeLayout>