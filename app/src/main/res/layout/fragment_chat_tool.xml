<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="cn.dustray.defenderplatform.ChatToolFragment"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:alignmentMode="alignMargins"
    android:columnCount="4"
    android:rowCount="2"
    tools:context=".ChatToolFragment">

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="2dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_chat_tool_camera" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_chat_tool_pic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="相册"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_margin="2dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_chat_tool_file" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="文件"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_margin="2dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_chat_tool_position" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="位置"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="2dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_chat_tool_collect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="收藏"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>


</GridLayout>