<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="cn.dustray.defenderplatform.ChatToolFragment"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:alignmentMode="alignMargins"
    android:columnCount="5"
    android:rowCount="2"
    tools:context=".ChatToolFragment"
    android:background="#eee" >

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_columnWeight="1"
        android:background="@color/colorPrimary"
        android:elevation="1dp">

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="1">

        <ImageButton
            android:id="@+id/btn_web_menu_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_web_menu_add"
            android:paddingBottom="19dp"
            android:scaleType="center"
            android:src="@drawable/ic_btn_home_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="主页"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_web_menu_add"
            android:paddingBottom="19dp"
            android:scaleType="center"
            android:src="@drawable/ic_btn_collect_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="添加书签"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="1">

        <ImageButton
            android:id="@+id/btn_web_menu_rolllock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_web_menu_add"
            android:paddingBottom="19dp"
            android:scaleType="center"
            android:src="@drawable/ic_btn_roll_unlock_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="锁定侧滑"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1">

        <ImageButton
            android:id="@+id/btn_web_menu_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_web_menu_add"
            android:paddingBottom="19dp"
            android:scaleType="center"
            android:src="@drawable/ic_btn_refresh_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="刷新"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="4"
        android:layout_columnWeight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_web_menu_add"
            android:paddingBottom="19dp"
            android:scaleType="center"
            android:src="@drawable/ic_btn_delete_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="清空缓存"
            android:textColor="#666"
            android:textSize="13dp" />
    </RelativeLayout>
</GridLayout>