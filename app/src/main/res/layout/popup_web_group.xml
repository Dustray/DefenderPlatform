<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="cn.dustray.defenderplatform.ChatToolFragment"
    android:layout_width="match_parent"
    android:layout_height="488dp"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="cn.dustray.chat.ChatToolFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_columnWeight="1"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        android:translationZ="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标 签 页"
            android:textColor="#fff"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/web_group_list"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_centerVertical="true" />


        <ImageButton
            android:id="@+id/btn_web_closeall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_web_menu_add"
            android:elevation="3dp"
            android:src="@drawable/ic_btn_close_black" />

        <ImageButton
            android:id="@+id/btn_web_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_web_menu_add"
            android:elevation="3dp"
            android:src="@drawable/ic_btn_add_black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="10dp"
        android:translationZ="5dp"
        >

        <ImageButton
            android:id="@+id/btn_web_group_down"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:src="@drawable/ic_btn_menu_down_black"
            android:background="@drawable/btn_web_share"/>
    </RelativeLayout>
</LinearLayout>