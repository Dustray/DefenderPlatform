<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:padding="10dp">


    <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_apply_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@drawable/input_white"
        android:hint="监护人密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimaryLight"
        android:textCursorDrawable="@drawable/input_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_apply_time"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/input_white"
        android:hint="分钟数"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimaryLight"
        android:textCursorDrawable="@drawable/input_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_apply_pwd" />


    <Button
        android:id="@+id/btn_nofilter_time"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_alert"
        android:text="确 定"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_apply_time" />
</android.support.constraint.ConstraintLayout>
